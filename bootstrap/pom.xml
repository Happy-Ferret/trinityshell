<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>trinity</artifactId>
        <groupId>org.trinity</groupId>
        <version>0.0.3-SNAPSHOT</version>
    </parent>

    <artifactId>bootstrap</artifactId>
    <name>Trinitry Bootstrap</name>

    <dependencies>
        <!-- foundation api -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>foundation.api</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- X11 -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>x11.default</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!-- bindings -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>binding.default</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- shell api -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>shell.api</artifactId>
            <version>${project.version}</version>
        </dependency>


        <!-- shell implementation -->
        <!-- scene -->
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>shell.scene.default</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- logging implementation -->
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>1.0.10</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>org.trinity.bootstrap.EntryPoint</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
