<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<fx:root type="com.sun.javafx.scene.control.skin.SkinBase" xmlns:fx="http://javafx.com/fxml">
    <BorderPane styleClass="desktop">
        <top>
            <HBox fx:id="topBar" styleClass="top-bar" spacing="0" prefHeight="25"/>
        </top>

        <center>
            <AnchorPane styleClass="application-area"/>
        </center>

        <bottom>
            <HBox styleClass="bottom-bar" spacing="0" prefHeight="25"/>
        </bottom>
    </BorderPane>
</fx:root>
