<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>org.trinity</groupId>
		<artifactId>render.swt</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>render.swt.api</artifactId>
	<name>Render SWT API</name>

	<properties>
		<swt.project.version>3.8</swt.project.version>
	</properties>

	<profiles>
		<profile>
			<id>unix_i386</id>
			<activation>
				<os>
					<family>unix</family>
					<arch>i386</arch>
				</os>
			</activation>
			<properties>
				<swt.project.artifactId>org.eclipse.swt.gtk.linux.x86</swt.project.artifactId>
			</properties>
		</profile>
		<profile>
			<id>unix_x86_64</id>
			<activation>
				<os>
					<family>unix</family>
					<arch>amd64</arch>
				</os>
			</activation>
			<properties>
				<swt.project.artifactId>org.eclipse.swt.gtk.linux.x86_64</swt.project.artifactId>
			</properties>
		</profile>
	</profiles>

	<repositories>
		<repository>
			<id>swt-repo</id>
			<url>https://swt-repo.googlecode.com/svn/repo/</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>org.eclipse.swt</groupId>
			<artifactId>${swt.project.artifactId}</artifactId>
			<version>${swt.project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.trinity</groupId>
			<artifactId>foundation.render.api</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
</project>
